
<!-- Begin page -->
<div class="container">
    <div class="full-content-center animated fadeInDownBig">
        <p class="text-center"><a href="/"><img src="/assets/img/login-logo.png" alt="Logo"></a></p>
        <div class="login-wrap">
            <div class="login-block">
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <%= f.error_notification %>
                    <div class="form-group login-input">
                    <i class="fa fa-envelope overlay"></i>
                    <%= f.input :email, required: true, autofocus: true,label: false, input_html: {class: "form-control text-input"},placeholder: "E-mail" %>
                    
                    </div>
                    
                    <div class="form-group login-input">
                    <i class="fa fa-key overlay"></i>
                    <%= f.input :password, required: true, input_html: {class: "form-control text-input"}, placeholder: "Password", label: false,hint: false %>
                    
                    </div>

                    



                    <div class="checkbox"><%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
                    <div class="row">
                        <div class="col-sm-12">
                        <%= f.button :submit, "Login", {class: "btn btn-default btn-block"} %>
                        
                        </div>
                    </div>
                <% end %>
            </div>

            <% if request.subdomain.blank? || request.subdomain == "www" %>
            <%= render "devise/shared/links" %>
            <% end %>

        </div>
        
    </div>
</div>